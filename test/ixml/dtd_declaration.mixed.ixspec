<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://xylarium.org/ns/xspec/utils/ixspec" grammar="http://xylarium.org/ns/ixml/grammars/xml-document-type-declaration.ixml">

	<x:helper stylesheet="http://xylarium.org/ns/xslt/utils/strip-space.xsl" />
		
	<x:scenario label="Functional tests for document type declaration iXML">
		
		<x:scenario label="External definition">
			
			<x:scenario label="System">
				
				<x:context href="../data/input/text/xhtml_system_path.txt" />
				
				<x:expect label="External definition with system identifier but no public identifier."
					select="/*">
					<document-type-declaration>
						<root-element>html</root-element>
						<external-definition>
							<system-identifier>../../schemas/xhtml/xhtml-1_strict.dtd</system-identifier>
						</external-definition>
					</document-type-declaration>
				</x:expect>			
				
			</x:scenario>
			
			<x:scenario label="Public">
				
				<x:scenario label="Relative path">
					
					<x:context href="../data/input/text/xhtml_public_path.txt" />
					
					<x:expect label="External definition with system identifier and public identifier."
						select="/*">
						<document-type-declaration>
							<root-element>html</root-element>
							<external-definition>
								<public-identifier>-//W3C//DTD XHTML 1.0 Strict//EN</public-identifier>
								<system-identifier>../../schemas/xhtml/xhtml-1_strict.dtd</system-identifier>
							</external-definition>
						</document-type-declaration>
					</x:expect>			
					
				</x:scenario>
				
				<x:scenario label="HTTP URL">
					
					<x:context href="../data/input/text/xhtml_public_url.txt" />
					
					<x:expect label="External definition with system identifier and public identifier."
						select="/*">
						<document-type-declaration>
							<root-element>html</root-element>
							<external-definition>
								<public-identifier>-//W3C//DTD XHTML 1.0 Strict//EN</public-identifier>
								<system-identifier>http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd</system-identifier>
							</external-definition>
						</document-type-declaration>
					</x:expect>			
					
				</x:scenario>
				
			</x:scenario>
			
		</x:scenario>
		
	</x:scenario>
	
</x:description>
