<?xml version="1.0" encoding="UTF-8"?>
<properties>
	
	<debug value="false" />


	<!-- Apache ANT -->
	<ant>
		<lib>
			<cherry location="${ixspec.root-dir}/lib/cherry" /> 
		</lib>		
	</ant>
	

	<!-- Invisible XML settings -->
	<ixml>
		<grammar>
			<dtd>
				<declaration location="${ixspec.root-dir}/grammars/xml_document_type_declaration.ixml" />				
			</dtd>
		</grammar>
	</ixml>
	
		
	<!-- XML Entity and URI resolution -->
	<resource-resolution>
		<catalog>
			<default location="${ixspec.root-dir}/catalog.xml" />
		</catalog>
	</resource-resolution>
	    
	
	<!-- XProc settings -->
	<xproc>
		<processor>
			<morgana>
				<config>
					<default location="${ant.lib.cherry}/config/morgana/1/default.xml" />
				</config>
			</morgana>
		</processor>
		<pipeline>
			<ixspec2xspec location="${ixspec.root-dir}/src/xproc/ixspec2xspec.xpl" />
		</pipeline>
	</xproc>
	
	
	<!-- XSLT settings -->
	<xslt>
		<processor>
			<saxon>
				<config>
					<default location="${ant.lib.cherry}/config/saxon/12/default.xml" />
				</config>
			</saxon>
		</processor>
	</xslt>	
	
	
	<!-- XSpec properties -->
	<xspec>
		<processor>
			<ant location="${xspec.home}/build.xml" />
		</processor>
		<compiler>
			<xslt location="${xspec.home}/src/compiler/compile-xslt-tests.xsl" />
			<xquery location="${xspec.home}/src/compiler/compile-xquery-tests.xsl" />
		</compiler>
		<reporter>
			<html location="${xspec.home}/src/reporter/format-xspec-report.xsl" />
			<summary location="${ixspec.root-dir}/src/xslt/summarise_test_results.xsl" />
			<properties location="${ixspec.root-dir}/src/xslt/xspec_test_results2properties.xsl" />
		</reporter>
	</xspec>    
	
	
	<!-- Testing -->
	<test location="${ixspec.root-dir}/test">
		<data location="${test}/data" />
		<collection>
			<ixml location="${test}/ixml" />
			<xslt location="${test}/xslt" />
		</collection>
	</test>
	
	
	<!-- Default directory paths -->
	<base location="${basedir}/../">                   
		<tmp location="${base}/tmp" />
		<debug location="${base}/debug">
			<xspec location="${base.debug}/xspec" />
		</debug>
		<logs location="${base}/logs" />
		<reports location="${base}/reports" />		
	</base>
		
	
	<!-- List of dependencies to check -->
	<dependencies>
		<dependency.01 name="ANT Contrib" property="${ant.lib.contrib}" type="file" />
		<dependency.02 name="Cherry ANT Library" property="${ant.lib.cherry}" type="dir" />		
		<dependency.03 name="Morgana XProc III" property="${xproc.processor.morgana}" type="file" />
		<dependency.04 name="Morgana XProc III config for iXSpec Test Runner" property="${xproc.processor.morgana.config.default}" type="file" />
		<dependency.05 name="Saxon" property="${xslt.processor.saxon}" type="file" />
		<dependency.06 name="Saxon config for XSpec" property="${xslt.processor.saxon.config.default}" type="file" />
		<dependency.07 name="XML Resolver" property="${resource-resolution.resolver.xml-commons}" type="file" />
		<dependency.08 name="Default XML Catalog" property="${resource-resolution.catalog.default}" type="file" />
		<dependency.09 name="NineML CoffeeFilter" property="${ixml.processor.nine-ml.coffeefilter}" type="file" />
		<dependency.10 name="NineML CoffeeGrinder" property="${ixml.processor.nine-ml.coffeegrinder}" type="file" />
	</dependencies>
	
	
</properties>